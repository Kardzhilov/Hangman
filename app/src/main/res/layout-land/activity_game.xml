<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.micha.hangman.Game"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/blank_space_row"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.7"
                        android:gravity="center"
                        android:orientation="vertical">

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageViewAttempts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/hang1" />
                </LinearLayout>

            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="A"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="B"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="C"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="D"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="E"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="F"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonG"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="G"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="H"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="I"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="L"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="M"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonJ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="J"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="K"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="11.11"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.11"
                    android:text="N"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonO"
